<table class='table'>
  <thead>
      <tr>
        <th><%= image_tag user.get_profile_image, size: '100x100' %></th>
        <th colspan="2"></th>
      </tr>
  </thead>
  <tbody>

  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
   <th>follows</th>
   <th><%= link_to user_followings_path(user) do %><%= user.followings.count %><% end %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user_followers_path(user) do %><%= user.followers.count %><% end %></th>
  </tr>
  <tr><th><% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class: "btn btn-sm btn-info" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: "btn btn-sm btn-success" %>
              <% end %></th>
  </tr>
  </tbody>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>