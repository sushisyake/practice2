<% book.book_comments.each do |book_comment| %>
    <%= image_tag book_comment.user.get_profile_image, size: '50x50' %>
    <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), remote: true, method: :delete, class: "btn btn-sm btn-danger"%>
    <% end %>
    <p><%= book_comment.user.name %></p>
<% end %>
